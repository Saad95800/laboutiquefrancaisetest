{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block content %}

<h1>Nos produits!</h1>

    <div class="row">
        <div class="col-md-3">
            <h3>Filter</h3>
            {{ form(form) }}
        </div>
    

    <div class="col-md-9">

    <div class="row">
        {% for product in products %}

                <div class="col-md-4">
                    <div class="product-item">
                        <a href="{{ path('app_product_item', {'slug': product.slug}) }}">
                            <img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid" />
                        </a>
                        <h5>{{product.name}}</h5>
                        <span class="product-subtitle">{{product.subtitle}}</span>
                        <span class="product-price">{{ (product.price / 100 )|number_format(2, ',', '.')}} â‚¬</span>
                    </div>
                </div>

        {% endfor %}
    </div>
    </div>

    </div>

{% endblock %}
